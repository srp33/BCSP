#!/bin/bash

cd ML-Flex

function runExperiment {
  java -Xmx4g -jar mlflex.jar ACTION=Reset EXPERIMENTS=${experiment} NUM_THREADS=1
  java -Xmx4g -jar mlflex.jar ACTION=Process EXPERIMENTS=${experiment} NUM_THREADS=1 THREAD_TIMEOUT_MINUTES=5 PAUSE_SECONDS=1 DEBUG=false
}

for i in 1 2
do
  runExperiment utahontario1
  runExperiment utahontario1_Permute
  runExperiment utahontario1_RepeatA
  runExperiment utahontario1_BIOCARTA
  runExperiment utahontario1_KEGG
  runExperiment utahontario1_REACTOME
  runExperiment utahontario1_SPathways
done
